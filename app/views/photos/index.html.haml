!!!
%html
  %head
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-Type"}/
    %title Photo
  %body
    %hgroup
      %h1 California
    %nav
      %ul#menu.menu
        %li
          %a#about{:href => "#"}
            %span.active
            %span.wrap
              %span.link About me
              %span.descr Know me
        %li
          %a#projects{:href => "#"}
            %span.active
            %span.wrap
              %span.link Projects
              %span.descr My work
        %li
          %a#contact{:href => "#"}
            %span.active
            %span.wrap
              %span.link Contact
              %span.descr Get in touch
    %section#bg
      %section#overlay
      %a.nextImageBtn{:href => "#", :title => "next"}
      %a.prevImageBtn{:href => "#", :title => "previous"}
      %img#bgimg{:alt => @photos.first.title, :src => @photos.first.imagefile_url, :title => @photos.first.title}/
    #preloader
      %img{:alt => "", :height => "32", :src => "/assets/ajax-loader_dark.gif", :width => "32"}/
    #img_title
    #toolbar
      %a{:href => "#", :onclick => "ImageViewMode('full');return false", :title => "Maximize"}
        %img{:alt => "", :height => "50", :src => "/assets/toolbar_fs_icon.png", :width => "50"}/
    #thumbnails_wrapper
      #outer_container
        .thumbScroller
          .container  
            - @photos.each do |photo|
              .content
                %div
                  %a{:href => photo.imagefile_url}
                    %img.thumb{:alt => photo.title, :src => photo.imagefile_url(:thumb), :title => photo.title}/
    %article#popupAbout.popupAbout
      .customScrollBox
        .container
          .content
            %a#popupAboutClose
              %img{:alt => "", :src => "/assets/cross.png", :width => "20"}/
            %h1 About:
            %p
              %img.image{:alt => "", :src =>  @photos.first.imagefile_url(:thumb)}/
              About
        .dragger_container
          .dragger
        %a.scrollUpBtn{:href => "#"}
        %a.scrollDownBtn{:href => "#"}
    %article#popupProjects.popupProjects
      .customScrollBox
        .container
          .content
            %a#popupProjectsClose
              %img{:alt => "", :src => "/assets/cross.png", :width => "20"}/
            %h1 Projects: 
            %h2 Project1
            %p.nomargin
              %img.image{:alt => "", :src => @photos.first.imagefile_url(:thumb)}>/
              Description
              %br/
            .border
            %h2 Project2
            %p.nomargin
              %img.image{:alt => "", :src => @photos.first.imagefile_url(:thumb)}>/
              Description
              %br/
            .border
        .dragger_container
          .dragger
        %a.scrollUpBtn{:href => "#"}
        %a.scrollDownBtn{:href => "#"}
    %article#popupBlog.popupBlog
      .customScrollBox
        .container
          .content
            %a#popupBlogClose
              %img{:alt => "", :src => "/assets/cross.png", :width => "20"}/
            %h1 Blog
            %h2 title of the blog
            .date
              %span.day 24
              %span.month May
              %span.year 2011
            %p details
            .border
            %h2 title of the second blog
            .date
              %span.day 22
              %span.month May
              %span.year 2011
            %p Details2
            .border
        .dragger_container
          .dragger
        %a.scrollUpBtn{:href => "#"}
        %a.scrollDownBtn{:href => "#"}
%script#my_photos_json{:type => "text/json"}
  = @photos.to_json.html_safe
%script{:src => "/assets/gallery.js", :type => "text/javascript"}
%script{:src => "/assets/jquery.mCustomScrollbar.js", :type => "text/javascript"}


