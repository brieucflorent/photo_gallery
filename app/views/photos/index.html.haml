!!!
%html
  %head
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-Type"}/
    %title Photo
  %body
    %hgroup
      %h1= @album.name
    %nav
      %ul#menu.menu
        %li
          %a#about{:href => "#"}
            %span.active
            %span.wrap
              %span.link About me
              %span.descr Know me
        %li
          %a#projects{:href => "#"}
            %span.active
            %span.wrap
              %span.link Projects
              %span.descr My work
        %li
          %a#contact{:href => "#"}
            %span.active
            %span.wrap
              %span.link Contact
              %span.descr Get in touch
    %section#bg
      %a.nextImageBtn{:href => "#", :title => "next"}
      %a.prevImageBtn{:href => "#", :title => "previous"}
      %img#bgimg{:alt => @photos.first.title, :src => @photos.first.imagefile_url, :title => @photos.first.title}/
    #preloader
      %img{:alt => "", :height => "32", :src => "/assets/ajax-loader_dark.gif", :width => "32"}/
    #img_title
    #toolbar
      %a{:href => "#", :onclick => "ImageViewMode('full');return false", :title => "Maximise"}
        %img{:alt => "", :height => "50", :src => "/assets/toolbar_fs_icon.png", :width => "50"}/
    #thumbnails_wrapper
      #outer_container
        .thumbScroller
          .container  
            - @photos.each do |photo|
              .content
                %div
                  %a{:href => photo.imagefile_url}
                    %img.thumb{:alt => photo.title, :src => photo.imagefile_url(:thumb), :title => photo.title}/
    %article#popupAbout.popupAbout
      .customScrollBox
        .container
          .content
            %a#popupAboutClose
              %img{:alt => "", :src => "/assets/cross.png", :width => "20"}/
            - @albums.each do |album|  
              %h1 About:
              %p
                %img.image{:alt => "", :src => album.photos.first.imagefile_url(:thumb)}/
                - if not album.description.blank?
                  = album.description.html_safe
                %br/
              .border    
        .dragger_container
          .dragger
        %a.scrollUpBtn{:href => "#"}
        %a.scrollDownBtn{:href => "#"}
    %article#popupProjects.popupProjects
      .customScrollBox
        .container
          .content
            %a#popupProjectsClose
              %img{:alt => "", :src => "/assets/cross.png", :width => "20"}/
            %h1 Projects:
            - @projects.each do |project| 
              %h2= project.name
              %p.nomargin
                %img.image{:alt => "", :src => project.photos.first.imagefile_url(:thumb)}>/
                = project.description.html_safe
                %br/
              .border
        .dragger_container
          .dragger
        %a.scrollUpBtn{:href => "#"}
        %a.scrollDownBtn{:href => "#"}
%script#my_photos_json{:type => "text/json"}
  = @photos.to_json.html_safe
%script{:src => "/assets/gallery.js", :type => "text/javascript"}
%script{:src => "/assets/jquery.mCustomScrollbar.js", :type => "text/javascript"}


