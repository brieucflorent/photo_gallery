%table
  %thead
    %tr
      %td album name
      %td More info
  %tbody
    - @albums.each do |album|
      %tr
        %td= album.name
        %td= link_to "More about #{album.name}", album_path(album)
        %td
          %a.delete_post{"data-confirm" => "Are you sure you want to delete this album?", "data-method" => "delete", :href => album_path(album), :rel => "nofollow"} Destroy


= link_to 'Add new album', new_album_path