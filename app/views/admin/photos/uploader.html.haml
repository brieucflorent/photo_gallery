- content_for :head do
  = javascript_include_tag 'fileuploader'
  = stylesheet_link_tag    'fileuploader'

%nav
  %ul
    %li Home
    - if current_user.blank?
      %li= link_to image_tag( 'facebook_32.png'), '/users/auth/facebook'
      %li= link_to image_tag( 'google_32.png'), '/users/auth/google'

%body
  %container_right
    #file-uploader
      %noscript
        %p Please enable JavaScript to use file uploader

:javascript
  var uploader = new qq.FileUploader({
    element: document.getElementById('file-uploader'),
    action: '/admin/photos/uploader',
    params: {
      id: '#{params[:id]}'
    }
  });
  
    
- if not current_user.blank?
  = link_to "sign_out", destroy_user_session_url, :method => 'delete'
  = current_user.first_name
